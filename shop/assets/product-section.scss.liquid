// description

.description-title {
  margin: 0;
  font-family: 'Druk Wide Medium';
}

.product-section__information-container__description p {
  margin-bottom: 5px;
  font-size: 12px;
}

.product-section__information-container__description {
    margin-top: 10px;
    @media(min-width: 1400px) {
    display: inline-block;
    vertical-align: 45px;
    width: 48%;
    padding-left: 30px;
    margin-top: 0;
  }
  @media(max-width: 1023px) {
    padding-left: 5%;
    padding-right: 5%;
  }
}

.product-section__information-container form {
  @media(min-width: 1400px) {
    display: inline-block;
  }
  @media(max-width: 1023px) {
    padding-left: 5%;
    padding-right: 5%;
  }
}

.product-section__information-container__black-line {
  display: none;
  @media(max-width: 1023px) {
    display: block;
    height: 2px;
    width: 60%;
    background-color: black;
    margin-left: 50%;
    transform: translateX(-50%);
    margin-top: 20px;
    margin-bottom: -50px;
  }
}

// related products

.related-products {
  width: 22%;
  display: inline-block;
  @media(max-width: 1023px) {
    width: 50%;
    float: left;
    padding-left: 2.5px;
    padding-right: 2.5px;
  }
  img {
    background-color: #ECEDED;
    @media(min-width: 1024px) {
      margin-bottom: -6px;
    }
  }
}

.related-products__header {
  margin-bottom: 20px !important;
  margin-top: 70px;
}

.related-products__title {
  margin: 0;
  font-family: 'Druk Wide Medium';
  color: black;
  font-size: 14px;
  @media(max-width: 1023px) {
    padding-left: 5%;
    padding-right: 5%;
  }
}

// slick mobile

.slick-next {
  right: 25px !important;
  outline: none;
}

.slick-prev {
  left: 25px !important;
  outline: none;
}

.slick-prev:before {
    content: "" !important;
}

.slick-next:before {
  content: "" !important;
}
